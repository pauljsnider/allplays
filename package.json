{
  "name": "allplays",
  "version": "1.0.0",
  "description": "A static HTML + JavaScript sports team management and stat tracking application, powered by Firebase.",
  "scripts": {
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test tests/smoke/",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ui": "playwright test --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pauljsnider/allplays.git"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing"
  ],
  "author": "AllPlays",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/pauljsnider/allplays/issues"
  },
  "homepage": "https://github.com/pauljsnider/allplays#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.18"
  }
}
